{
  "name": "drink-water",
  "displayName": "drink-water",
  "description": "Drink Water Now !",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "icon": "./resources/logo.svg",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "drink-water.resetCount",
        "title": "WaterTimer: Reset Water Counting"
      },
      {
        "command": "drink-water.initiateCounter",
        "title": "WaterTimer: Activate Water Counting"
      },
      {
        "command": "drink-water.ergonomic-initiateCounter",
        "title": "WaterTimer: Activate Ergonomic Counting"
      },
      {
        "command": "drink-water.ergonomic-resetCount",
        "title": "WaterTimer: Reset Ergonomic Counting"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.63.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4",
    "@vscode/test-electron": "^1.6.2"
  }
}
